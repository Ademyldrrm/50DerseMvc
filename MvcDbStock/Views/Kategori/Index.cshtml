@using MvcDbStock.Models.Entity;
@using PagedList;
@using PagedList.Mvc;
@model PagedList.IPagedList<TblKategori>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>Kategori Listeleme</h2>

<table class="table table-bordered">

    <tr>

        <th>Kategori ID</th>
        <th>Kategori AD</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <th>@item.KATEGORID</th>
            <td>@item.KATEGORİAD</td>
            <td><a href="/Kategori/Sil/@item.KATEGORID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Kategori/KategoriGetir/@item.KATEGORID" class="btn btn-success">Güncelle</a></td>
        </tr>
    }

</table>
@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa }))
<a href="/Kategori/YeniKategoriEkle/" class="btn btn-primary">Yeni Kategori Ekle</a>