@model MvcDbStock.Models.Entity.TblMüsteri
@{
    ViewBag.Title = "MüsteriGetir";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>Müsteri Getir</h2>

@using (Html.BeginForm("Guncelle", "Musteri", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(x => x.MUSTERIID)
        @Html.TextBoxFor(x => x.MUSTERIID, new { @class = "form-control" })
        <br />
        @Html.LabelFor(x => x.MÜSTERIAD)
        @Html.TextBoxFor(x => x.MÜSTERIAD, new { @class = "form-control" })
        <br />
        @Html.LabelFor(x => x.MUSTERISOYAD)
        @Html.TextBoxFor(x => x.MUSTERISOYAD, new { @class = "form-control" })
        <br />

        <button class="btn btn-primary">Müşteri Güncelle</button>


    </div>
}