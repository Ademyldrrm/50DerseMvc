@using MvcDbStock.Models.Entity;
@model List<TblUrunler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<h2>Ürünler Listeleme Sayfası</h2>

<table id="tbl1 " class="table table-bordered">
    <thead>
        <tr>
            <th>Ürün ID</th>
            <th>ÜRÜN AD</th>
            <th>MARKA</th>
            <th>Kategori</th>
            <th>FİYAT</th>
            <th>STOK</th>
            <th>SİL</th>
            <th>GÜNCELLE</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.URUNID</td>
                <td>@item.URUNAD</td>
                <td>@item.MARKA</td>
                <td>@item.TblKategori.KATEGORİAD</td>
                <td>@item.FIYAT</td>
                <td>@item.STOK</td>
                <td><a href="/Urun/UrunSil/@item.URUNID" class=" btn btn-danger">Sil</a></td>
                <td><a href="/Urun/UrunGüncelle/@item.URUNID" class=" btn btn-success">Güncelle</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/Urun/YeniÜrünEkle/" class="btn btn-info">Yeni Ürün</a>


<link href="~/Content/DataTables/css/buttons.bootstrap4.css" rel="stylesheet" />
<script type="text/javascript" src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

<script>
    $('#tbl1').DataTable();
</script>